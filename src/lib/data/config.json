{
  "app": {
    "name": "FPV穿越机部件数据库",
    "version": "2.0.0",
    "description": "专业的FPV穿越机部件数据库与装机配置平台",
    "theme": {
      "primaryColor": "#00f0ff",
      "accentColor": "#ff00a0",
      "backgroundColor": "#0a0a0f",
      "cardBackground": "#12121a",
      "textColor": "#e0e0e0",
      "mutedTextColor": "#888888"
    }
  },
  "data": {
    "source": "json",
    "jsonPath": "/data/components.json",
    "refreshInterval": 3600000
  },
  "features": {
    "priceMonitor": true,
    "communityBuilds": true,
    "buildConfigurator": true,
    "tutorials": true,
    "comparison": true
  },
  "filters": {
    "defaultSkillLevel": ["entry", "intermediate"],
    "defaultOrigins": ["domestic", "international"],
    "priceRanges": [
      { "label": "¥0-100", "min": 0, "max": 100 },
      { "label": "¥100-300", "min": 100, "max": 300 },
      { "label": "¥300-500", "min": 300, "max": 500 },
      { "label": "¥500-1000", "min": 500, "max": 1000 },
      { "label": "¥1000+", "min": 1000, "max": 999999 }
